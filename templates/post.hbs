<hi>{{title}} </h1>

{{#if isEditing}}
	<p>The state is {{isEditing}}</p>
	<form>
		<div class ="form-group">
			<label for="title">Title</label>
			{{input id="title" class="form-control" value=title}}
		</div>
		<div class="form-group">
			<label for="body">Body</label>
			{{textarea id="body" class="form-control" rows="15" value=body}}	
		<div>
		<button class="btn btn-primary" {{action 'save'}}>Save</button>
	</form>
{{else}}
	<p>{{body}}</p>
	
	<button class="btn btn-primary" {{action 'edit'}}>Edit Button</button>
	<p>The state is {{isEditing}}</p>
	<button class="btn btn-danger" {{action 'delete'}}>Delete Button</button>
	
{{/if}}

<h2>Comments</h2>

{{#each comment in comments}}
	<p>{{comment.text}}</p>
{{/each}}

<p>{{#link-to 'new-comment' this.id class="btn btn-default"}}New comment{{/link-to}}</p>

{{outlet}}

